<h3>Edit a Recipe</h3>
<div class="row">
    <form action="/recipes/{{recipe._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="input-filed">
            <input type="text" id="title" name="title" value="{{recipe.title}}">
            <label for="title">Title</label>            
        </div>
    </div>

    <div class="row">
        <div class="input-filed">
            <select name="status" id="status">
                {{#select story.status}}
                <option value="public" selected>Public</option>          
                <option value="private">Private</option>
                {{/select}}          
            </select>
            <label for="status">Status</label>         
        </div>
    </div>

    <div class="row">
        <div class="input-filed">
            <h5>Share Your Own Recipes</h5>
            <textarea name="body" id="body">{{recipe.body}}</textarea>          
        </div>
    </div>

    <div class="row">
        <input type="submit" value="Save" class="btn">
        <a href="/dashboard" class="btn orange">Cancel</a>          
    </div>
    </form>
</div>